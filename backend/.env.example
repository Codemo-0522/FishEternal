#1.服务器地址
SERVER_HOST=0.0.0.0
SERVER_PORT=8000


# 模型流式输出限制
MAX_RESPONSE_LENGTH=100000  # 最大总长度
MAX_CHUNK_LENGTH=1000      # 单个chunk长度

# 跳过启动时的索引检查（可选）
SKIP_INDEX_CHECK=false

#关闭后端日志输出（修改为1则屏蔽后端控制台日志打印）
SILENCE_BACKEND_LOGS=0

EMAIL_VERIFICATION=0  #是否启用邮箱验证（0为关闭，1为启用）
# SMTP服务器配置
SMTP_SERVER=smtp.163.com
SMTP_PORT=993
SMTP_USER=
SMTP_PASS=
SMTP_USE_SSL=1
VERIFICATION_CODE_EXPIRE_MINUTES=5
VERIFICATION_CODE_LENGTH=6
APP_NAME=FishEternal
APP_URL=http://localhost:5173

#3.JWT设置
JWT_SECRET_KEY=8c5bbc8f3a0d6c1c8c9e6d4b7e3f0a9d2b5e8f1c4a7d0b3e6c9f2a5b8e1d4a7
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

#5.MongoDB设置
MONGODB_URL=mongodb://localhost:27017  # 如果MongoDB不是本地或使用不同端口需要修改
MONGODB_DB_NAME=fish_eternal  # 可使用默认值

#8.MinIO设置（如果使用MinIO必需修改）
MINIO_ENDPOINT=http://127.0.0.1:9005
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET_NAME=fish-eternal

# ==================== Redis 配置 ====================
# Redis 服务器地址（默认: localhost）
REDIS_HOST=localhost
# Redis 服务器端口（默认: 6379）
REDIS_PORT=6379
# Redis 数据库编号（0-15，默认: 0）
REDIS_DB=0
# Redis 密码（如果没有设置密码，留空即可）
REDIS_PASSWORD=
# Redis 连接池最大连接数（默认: 50）
REDIS_MAX_CONNECTIONS=50
# Redis 连接超时时间（秒，默认: 5）
REDIS_SOCKET_TIMEOUT=5